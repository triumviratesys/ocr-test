MONGODB_URI=mongodb://localhost:27017/ocr-database
PORT=5000

# Azure Computer Vision - Read API (optimized for handwriting)
# Get your free API key at: https://portal.azure.com
# Free tier: 5000 requests/month, supports up to 50MB images
AZURE_VISION_KEY=your_azure_vision_key_here
AZURE_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# Azure Document Intelligence - for layout analysis and table extraction
# If you have a multi-service "Azure AI Services" resource, you can use the same credentials as above
# Otherwise, create a separate Document Intelligence resource at: https://portal.azure.com
# Free tier: 500 pages/month
# Leave blank to use AZURE_VISION_KEY/ENDPOINT (for multi-service resources)
AZURE_DOCUMENT_INTELLIGENCE_KEY=
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=

# Azure OpenAI - for AI post-processing of OCR text
# Get your credentials at: https://portal.azure.com
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-08-01-preview
